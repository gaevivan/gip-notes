/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./out-tsc/app",
        "types": [
            "firebase"
        ],
        "paths": {
            "@components/*": ["src/app/components/*"],
            "@models/*": ["src/app/models/*"],
            "@pipes/*": ["src/app/pipes/*"],
            "@services/*": ["src/app/services/*"]
        }
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "**/*.prod.ts",
        "**/*.spec.ts"
    ]
}